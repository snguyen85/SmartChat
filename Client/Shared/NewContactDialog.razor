@using System.ComponentModel.DataAnnotations

@inject SmartChatService SmartChatService
@inject ISnackbar Snackbar

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            Add Contact
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText Color="@Color.Error">
            @Error
        </MudText>
        <MudTextField Label="User name" @bind-Value="@UserName" For="@(() => UserName)" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" OnClick="() => AddContactAsync()">Add Contact</MudButton>
    </DialogActions>
</MudDialog>

@code
{
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Required]
    public string UserName { get; set; }
    string Error { get; set; }

    void Cancel() => MudDialog.Cancel();

    async void AddContactAsync()
    {
        var contact = await SmartChatService.AddContactAsync(UserName);

        if (contact != null)
        {
            Snackbar.Add("New conversation started", Severity.Success);
            MudDialog.Close(DialogResult.Ok(contact));
        }
        else
        {
            Error = "Unable to add contact";
        }
    }
}